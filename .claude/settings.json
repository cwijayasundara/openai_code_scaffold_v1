{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/pre_write_check.sh\" \"$CLAUDE_FILE_PATH\"",
            "timeout": 30,
            "statusMessage": "Checking write location..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/post_write_lint.sh\" \"$CLAUDE_FILE_PATH\"",
            "timeout": 120,
            "statusMessage": "Running post-write linters..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/lint_all.sh\"",
            "timeout": 120,
            "statusMessage": "Running final lint check..."
          }
        ]
      }
    ]
  }
}
